<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#f5f5f5">
    <include layout="@layout/inc_titlebar" android:id="@+id/include2" android:layout_width="match_parent"
             android:layout_height="wrap_content"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="&quot;건강관리 수첩&quot;은 건강관리에 대한 인식향상과 대사증\n후군 관리를 위해 전문가가 검증한 다양하고 신뢰할 수 있\n는 올바른 건강정보를 알기 쉽고 친근한 방식으로 제공합\n니다."
            android:id="@+id/tv_explain_note" android:background="#2ca6aa" android:textColor="#ffffff"
            android:textSize="42px" android:paddingTop="100px" android:paddingBottom="100px"
            android:paddingLeft="50px" android:paddingRight="50px" android:layout_marginBottom="60px" android:lineSpacingExtra="10px"
    />
    <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sv_note" android:layout_gravity="center_horizontal" android:layout_marginBottom="30px">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:background="#ffffff" android:id="@+id/note_menu_0">
                <ImageView
                        android:layout_width="90px"
                        android:layout_height="90px"
                        android:id="@+id/img_icon_0" android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_00_01" android:layout_marginLeft="40px"
                        android:layout_marginRight="40px"/>
                <TextView
                        android:layout_width="786px"
                        android:layout_height="160px"
                        android:text="비만 예방 / 관리"
                        android:id="@+id/tv_note_0" android:gravity="center_vertical" android:textColor="#232323"
                        android:textSize="43px"/>
                <ImageView
                        android:layout_width="24px"
                        android:layout_height="40px"
                        android:id="@+id/img_go_0" android:layout_gravity="center_vertical"
                        android:src="@drawable/next"/>
            </LinearLayout>
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/underline_grey"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:background="#ffffff" android:visibility="visible"
                          android:id="@+id/note_menu_1">
                <ImageView android:layout_width="90px" android:layout_height="90px" android:id="@+id/img_icon_1"
                           android:layout_gravity="center_vertical" android:layout_marginLeft="40px"
                           android:layout_marginRight="40px" android:src="@drawable/icon_00_02"/>
                <TextView android:layout_width="786px" android:layout_height="160px" android:text="영양 / 식습관 관리"
                          android:id="@+id/tv_note_1" android:gravity="center_vertical" android:textColor="#232323"
                          android:textSize="43px"/>
                <ImageView android:layout_width="24px" android:layout_height="40px" android:id="@+id/img_go_1"
                           android:layout_gravity="center_vertical" android:src="@drawable/next"/>
            </LinearLayout>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:src="@drawable/underline_grey" android:visibility="visible"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:background="#ffffff" android:visibility="visible"
                          android:id="@+id/note_menu_2">
                <ImageView android:layout_width="90px" android:layout_height="90px" android:id="@+id/img_icon_2"
                           android:layout_gravity="center_vertical" android:layout_marginLeft="40px"
                           android:layout_marginRight="40px" android:src="@drawable/icon_00_03"/>
                <TextView android:layout_width="786px" android:layout_height="160px" android:text="운동 관리 I"
                          android:id="@+id/tv_note_2" android:gravity="center_vertical" android:textColor="#232323"
                          android:textSize="43px"/>
                <ImageView android:layout_width="24px" android:layout_height="40px" android:id="@+id/img_go_2"
                           android:layout_gravity="center_vertical" android:src="@drawable/next"/>
            </LinearLayout>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:src="@drawable/underline_grey" android:visibility="visible"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:background="#ffffff" android:visibility="visible"
                          android:id="@+id/note_menu_8">
                <ImageView android:layout_width="90px" android:layout_height="90px" android:id="@+id/img_icon_8"
                           android:layout_gravity="center_vertical" android:layout_marginLeft="40px"
                           android:layout_marginRight="40px" android:src="@drawable/icon_00_03"/>
                <TextView android:layout_width="786px" android:layout_height="160px" android:text="운동 관리 II"
                          android:id="@+id/tv_note_8" android:gravity="center_vertical" android:textColor="#232323"
                          android:textSize="43px"/>
                <ImageView android:layout_width="24px" android:layout_height="40px" android:id="@+id/img_go_8"
                           android:layout_gravity="center_vertical" android:src="@drawable/next"/>
            </LinearLayout>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:src="@drawable/underline_grey" android:visibility="visible"
                       />
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:background="#ffffff" android:visibility="visible"
                          android:id="@+id/note_menu_3">
                <ImageView android:layout_width="90px" android:layout_height="90px" android:id="@+id/img_icon_3"
                           android:layout_gravity="center_vertical" android:layout_marginLeft="40px"
                           android:layout_marginRight="40px" android:src="@drawable/icon_00_04"/>
                <TextView android:layout_width="786px" android:layout_height="160px" android:text="스트레스 관리"
                          android:id="@+id/tv_note_3" android:gravity="center_vertical" android:textColor="#232323"
                          android:textSize="43px"/>
                <ImageView android:layout_width="24px" android:layout_height="40px" android:id="@+id/img_go_3"
                           android:layout_gravity="center_vertical" android:src="@drawable/next"/>
            </LinearLayout>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:src="@drawable/underline_grey" android:visibility="visible"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:background="#ffffff" android:visibility="visible"
                          android:id="@+id/note_menu_4">
                <ImageView android:layout_width="90px" android:layout_height="90px" android:id="@+id/img_icon_4"
                           android:layout_gravity="center_vertical" android:layout_marginLeft="40px"
                           android:layout_marginRight="40px" android:src="@drawable/icon_00_05"/>
                <TextView android:layout_width="786px" android:layout_height="160px" android:text="금연, 절주"
                          android:id="@+id/tv_note_4" android:gravity="center_vertical" android:textColor="#232323"
                          android:textSize="43px"/>
                <ImageView android:layout_width="24px" android:layout_height="40px" android:id="@+id/img_go_4"
                           android:layout_gravity="center_vertical" android:src="@drawable/next"/>
            </LinearLayout>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:src="@drawable/underline_grey" android:visibility="visible"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:background="#ffffff" android:visibility="visible"
                          android:id="@+id/note_menu_5">
                <ImageView android:layout_width="90px" android:layout_height="90px" android:id="@+id/img_icon_5"
                           android:layout_gravity="center_vertical" android:layout_marginLeft="40px"
                           android:layout_marginRight="40px" android:src="@drawable/icon_00_06"/>
                <TextView android:layout_width="786px" android:layout_height="160px" android:text="혈압 관리"
                          android:id="@+id/tv_note_5" android:gravity="center_vertical" android:textColor="#232323"
                          android:textSize="43px"/>
                <ImageView android:layout_width="24px" android:layout_height="40px" android:id="@+id/img_go_5"
                           android:layout_gravity="center_vertical" android:src="@drawable/next"/>
            </LinearLayout>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:src="@drawable/underline_grey" android:visibility="visible"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:background="#ffffff" android:visibility="visible"
                          android:id="@+id/note_menu_6">
                <ImageView android:layout_width="90px" android:layout_height="90px" android:id="@+id/img_icon_6"
                           android:layout_gravity="center_vertical" android:layout_marginLeft="40px"
                           android:layout_marginRight="40px" android:src="@drawable/icon_00_07"/>
                <TextView android:layout_width="786px" android:layout_height="160px" android:text="혈당 관리 I"
                          android:id="@+id/tv_note_6" android:gravity="center_vertical" android:textColor="#232323"
                          android:textSize="43px"/>
                <ImageView android:layout_width="24px" android:layout_height="40px" android:id="@+id/img_go_6"
                           android:layout_gravity="center_vertical" android:src="@drawable/next"/>
            </LinearLayout>
            <ImageView android:layout_width="match_parent" android:layout_height="wrap_content"
                       android:src="@drawable/underline_grey"
                       android:visibility="visible"/>
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                          android:layout_height="wrap_content" android:background="#ffffff" android:visibility="visible"
                          android:id="@+id/note_menu_7">
                <ImageView android:layout_width="90px" android:layout_height="90px" android:id="@+id/img_icon_7"
                           android:layout_gravity="center_vertical" android:layout_marginLeft="40px"
                           android:layout_marginRight="40px" android:src="@drawable/icon_00_07"/>
                <TextView android:layout_width="786px" android:layout_height="160px" android:text="혈당 관리 II"
                          android:id="@+id/tv_note_7" android:gravity="center_vertical" android:textColor="#232323"
                          android:textSize="43px"/>
                <ImageView android:layout_width="24px" android:layout_height="40px" android:id="@+id/img_go_7"
                           android:layout_gravity="center_vertical" android:src="@drawable/next"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

