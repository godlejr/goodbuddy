<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <include
        layout="@layout/toolbar_back"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grayLine"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1.5"
        android:padding="50dp"
        android:src="@drawable/record_pencil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="혈압"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_record_maxbloodpressure"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="3"
                android:gravity="center"
                android:hint="최고"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textColorHint="#999"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="mmHg / "
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_record_minbloodpressure"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="3"
                android:gravity="center"
                android:hint="최저"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textColorHint="#999"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="mmHg"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_record_submitpressure"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_border_black_r10"
                android:gravity="center"
                android:text="입력"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="혈압계를 통해 측정된 최고치와 최저치 혈압수치를 기록해주세요."
            android:textColor="#999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="혈당"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/blank"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_record_bloodsugar"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="3"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="mg/dL"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_record_submitbloodsugar"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_border_black_r10"
                android:gravity="center"
                android:text="입력"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="혈당기를 통해 측정된 아침 공복혈당을 기록해주세요."
            android:textColor="#999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="키 / 체중"
                android:textColor="@color/textColor"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_record_height"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="3"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textColorHint="#999"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="cm / "
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/et_record_weight"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:ems="3"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLength="3"
                android:maxLines="1"
                android:textColor="@color/textColor"
                android:textColorHint="#999"
                android:textSize="18sp" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="kg"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btn_record_submitbmi"
                android:layout_width="1dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_border_black_r10"
                android:gravity="center"
                android:text="입력"
                android:textColor="@color/textColor"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eaeaea" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="키나 몸무게에 변화가 있다면 기록해주세요."
            android:textColor="#999" />
    </LinearLayout>

</LinearLayout>